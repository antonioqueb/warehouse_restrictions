<odoo>
    <data>
        <!-- Vista que hereda la forma principal del modelo stock.warehouse (ID: stock.view_warehouse) -->
        <record id="view_warehouse_inherit_assign_users" model="ir.ui.view">
            <field name="name">stock.warehouse.form.inherit.assign.users</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <!-- Insertamos el campo assigned_user_ids debajo de 'code', por ejemplo -->
                <xpath expr="//field[@name='code']" position="after">
                    <field name="assigned_user_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
